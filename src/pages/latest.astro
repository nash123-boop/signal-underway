---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("posts"))
  .sort((a, b) => b.data.publishDate.localeCompare(a.data.publishDate));
---
<BaseLayout title="Latest — Signal Underway" currentNav="Latest">
  <h2 style="margin:14px 0 8px 0;letter-spacing:.08em;text-transform:uppercase;color:var(--muted);font-size:13px">Latest</h2>
  <div class="list">
    {posts.map((p) => (
      <a class="item" href={`/p/${p.slug}`}>
        <div class="itemInner">
          <div class="meta">
            <span class="badge">{p.data.category}</span><span class="dot">•</span><span>{p.data.publishDate}</span>
          </div>
          <h3>{p.data.title}</h3>
          <p>{p.data.deck}</p>
        </div>
      </a>
    ))}
  </div>
</BaseLayout>
